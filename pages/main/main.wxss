/* pages/main/main.wxss */
.swiper_imgs {
  width: 100%;
}

.announcement {
	margin: 10px;
	
}

/* 活动栏 */
/* 整体容器样式 */
.container {
  display: flex;
  flex-direction: column;
  padding: 20rpx;
  background-color: #f5f5f5;
}

/* 头部样式 */
.header {
  background-color: #007AFF;
  color: white;
  text-align: center;
  padding: 20rpx;
  font-size: 20rpx;
  border-radius: 10rpx 10rpx 0 0;
}

/* 内容区域样式 */
.content {
  display: flex;
  flex-direction: column;
  background-color: white;
  border-radius: 0 0 10rpx 10rpx;
  padding: 20rpx;
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
}

/* 党群服务中心样式 */
.service-center {
  margin-bottom: 20rpx;
  padding: 20rpx;
  background-color: #f9f9f9;
  border-radius: 10rpx;
}

/* 标题样式 */
.title {
  font-size: 18rpx;
  font-weight: bold;
  color: #333;
}

/* 活动区域样式 */
.activity-section {
  margin-top: 20rpx;
}

/* 活动标题样式 */
.section-title {
  font-size: 16rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

/* 活动标签样式 */
.activity-tabs {
  display: flex;
  justify-content: flex - start;
  border-bottom: 2rpx solid #f0f0f0;
}

/* 单个活动标签样式 */
.tab {
  padding: 10rpx 20rpx;
  border-radius: 5rpx 5rpx 0 0;
  border: 2rpx solid #f0f0f0;
  margin-right: 10rpx;
  cursor: pointer;
  font-size: 14rpx;
  color: #666;
}

/* 选中的活动标签样式 */
.tab.active {
  background-color: #007AFF;
  color: white;
  border-color: #007AFF;
}

/* 更多按钮样式 */
.more {
  margin-left: auto;
  cursor: pointer;
  font-size: 14rpx;
  color: #007AFF;
}

/* 活动列表样式 */
.activity-list {
  margin-top: 10rpx;
  padding: 20rpx;
}

/* 无活动提示样式 */
.no-activity {
  color: #999;
  font-size: 14rpx;
}